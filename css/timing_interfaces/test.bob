  <widget type="scrollbar" version="2.0.0">
    <name>SC_DelayControl</name>
    <pv_name>loc://$(P)$(trig_name)Delay-SP(0)</pv_name>
    <x>310</x>
    <y>258</y>
    <width>120</width>
    <show_value_tip>false</show_value_tip>
    <scripts>
      <script file="EmbeddedPy">
        <text><![CDATA[from org.csstudio.opibuilder.scriptUtil import PVUtil, ConsoleUtil

pv0 = PVUtil.getString(pvs[0])
pv1 = PVUtil.getDouble(pvs[1])

props = {
	"0.1ns": 1e-4,
	"10ns": 1e-2,
	"1us": 1e0,
	"0.1ms": 1e2,
	"10ms": 1e4,
	}

sc = props[str(pv0)]

neg_lim = pv1 - 100*sc
if neg_lim <0: neg_lim = 0.0
widget.setPropertyValue("maximum",pv1 + 100*sc)
widget.setPropertyValue("minimum", neg_lim)
widget.setPropertyValue("page_increment",10*sc)
widget.setPropertyValue("step_increment",1*sc)
widget.setPropertyValue("bar_length",1*sc)

]]></text>
        <pv_name>loc://$(P)$(trig_name)scale("0.1ns")</pv_name>
        <pv_name trigger="false">$(pv_name)</pv_name>
      </script>
    </scripts>
    <tooltip>Page Increment: 10.0
Step Increment:   1.0</tooltip>
    <border_alarm_sensitive>false</border_alarm_sensitive>
    <maximum>0.5</maximum>
    <bar_length>1.0</bar_length>
    <increment>8.0E-9</increment>
